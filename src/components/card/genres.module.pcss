.genres {
  &__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    column-gap: 5px;
    row-gap: 5px;
    list-style: none;
    margin: 0;
    padding: 10px 20px;
  }

  &__item {
    padding: 3px 10px;
    border: 2px solid #fff;
    border-radius: 20px;
    text-transform: uppercase;
    font-size: 0.7em;
    font-weight: bold;
    background: #f80;
    color: #fff;
    box-shadow: var(--elem-shadow);
  }
}
