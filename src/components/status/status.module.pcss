.status {
  --color: #000;

  display: flex;
  align-items: center;
  gap: 5px;
  padding: 2px 5px;

  border-radius: 5px;
  background-color: #eee;
  color: #111;
  font-size: 0.8em;
  font-weight: bold;
  box-shadow: var(--elem-shadow);

  &::before {
    content: '';
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: 1px solid #0004;
    background-color: var(--color);
  }
}
